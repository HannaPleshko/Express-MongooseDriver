{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@controller/*": ["controller/*"],
      "@db.schemas/*": ["db.schemas/*"],
      "@helper/*": ["helper/*"],
      "@exceptions/*": ["exceptions/*"],
      "@interface/*": ["interface/*"],
      "@service/*": ["service/*"],
      "@repository/*": ["repository/*"]
    },
    "target": "es2017",
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types",
      "@types",
      "node_modules/@types"
    ],
    "strictNullChecks": false,
    "strict": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}